<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<header>
			<div class="header-container">
				<div class="header-row">
					<p>Railsブログ</p>
					<%= link_to new_post_path do %>
						<i class="fas fa-edit"></i>
					<% end %>
				</div>
				<nav class="header-nav">
					<ul>
						<li><%= link_to 'プロフィール', profile_path %></li>	
						<li><%= link_to 'ブログ', posts_path %></li>
            <li><%= link_to 'お問い合わせ', new_contact_path %></li>	
					</ul>
				</nav>
			</div>
		</header>
		<div class="container">
      <%= yield %>
			<div class="col-xs-12 col-sm-4">

			</div>
		</div>
		<footer>	
			<nav class="footer-left">
				<ul>
					<li><%= link_to 'プライバシーポリシー', privacy_path %></li>	
					<li><%= link_to 'サイトマップ', sitemap_path %></li>
				</ul>
			</nav>
			<div class="footer-right">
				<p>©︎Copyright2019 Railsブログ All Rights Reserved.</p>
			</div>
		</footer>
  </body>
</html>
