<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <div class="container">
		    <header>
			    <div class="header-container">
				    <div class="header-row">
					    <h2>Railsブログ</h2>
                        <% if user_signed_in? %>
			    		    <%= link_to new_admin_post_path do %>
				    		    <i class="fas fa-edit"></i>
			    	    	<% end %>
                        <% end %>    
	    			</div>
		    		<nav class="header-nav">
			    		<ul>
                        <% if user_signed_in? %>
                            <li><%= link_to 'プロフィール', edit_admin_user_path %></li>
                            <li><%= link_to 'ブログ', admin_posts_path %></li>
                            <li><%= link_to 'お問い合わせ', admin_contacts_path %></li>
                        <% else %>
				    		<li><%= link_to 'プロフィール', profile_path %></li>	
					    	<li><%= link_to 'ブログ', posts_path %></li>
                            <li><%= link_to 'お問い合わせ', new_contacts_path %></li>	
                        <% end %>    
				    	</ul>
				    </nav>
		    	</div>
	    	</header>
	    	<div class="main">
                <%= yield %>
	    	</div>
		    <footer>	
			    <nav class="footer-left">
				    <ul>
                        <li>
                        <% if user_signed_in? %> 
                            <%= link_to destroy_user_session_path, method: :delete, data: { confirm: "ログアウトしますか？" } do %>
                                <i class="fas fa-sign-out-alt"></i>
                         <% end %>
                       <% else %>
                            <%= link_to new_user_session_path do %>
                                <i class="fas fa-sign-in-alt"></i>
                            <% end %>
                      <% end %>
                        </li>
		    			<li><%= link_to 'プライバシーポリシー', privacy_path %></li>	
			    		<li><%= link_to 'サイトマップ', sitemap_path %></li>
				    </ul>
	    		</nav>
		    	<div class="footer-right">
			    	<p>©︎Copyright2019 Railsブログ All Rights Reserved.</p>
			    </div>
	    	</footer>
        </div>
  </body>
</html>
