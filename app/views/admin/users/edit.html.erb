<div class="col-sm-12">
	<div class="form">
		<h2>プロフィール編集画面<h2>
		<%= form_with model: @user, local: true, url: admin_user_path do |f| %>
			<div class="field">
				<%= f.label :名前 %><br>
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<%= f.label :画像 %><br>
				<%= f.attachment_field :image %>
			</div>
			<div class="field">
				<%= f.label :プロフィール文 %><br>
				<%= f.text_area :profile %>
			</div>
			<div class="actions"><br>
				<%= f.submit "更新" %>
			</div>
		<% end %>
	</div>
</div>

