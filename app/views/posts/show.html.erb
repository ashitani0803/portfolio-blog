<div class="col-xs-12 col-sm-8">
  <article>
    <p>
      <time>
          <%= @post.created_at.strftime('%Y-%m-%d') %>
      <% unless @post.created_at.strftime('%Y-%m-%d') == @post.updated_at.strftime('%Y-%m-%d') %>
          (更新日：<%= @post.updated_at.strftime('%Y-%m-%d') %>)
      <% end %>
      </time>
    </p>
    <h2><%= @post.title %></h2>
    <ul class="flex">
      <% @post.tags.each do |tag| %>
        <li><%= link_to tag.tag_name, posts_path(tag_id: tag.id) %></li>
     <% end %>
    </ul>
    <p><%= @post.body %></p>
  </article>
</div>
<%= render 'search_form', user: @user, tags: @tags %>
