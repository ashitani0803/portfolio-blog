<div class="col-xs-12 col-sm-8">
	<h2>記事の編集<h2>
	<%= form_with model: @post do |f| %>
		<div class="form-group">
			<%= f.label :タイトル %>
			<%= f.text_field :title %>
		</div>
		<div class="form-group">
			<%= f.label :タグ %>
			<%= f.select :tag %>
		</div>
		<div class="form-group">
			<%= f.label :画像 %>
			<%= f.attchment_field :image %>
		</div>
		<div class="form-group">
			<%= f.label :本文 %>
			<%= f.text_area :content %>
		</div>
		<div class="form-group">
			<%= f.label :ステータス %>
			<%= f.select :status, Post.statuses.keys %>
		</div>
		<div class="form-group">
			<%= f.submit "更新" %>
		</div>
		<div class="form-group">
			<%= link_to "記事を削除", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？"} %>
		</div>
	<% end %>
</div>
