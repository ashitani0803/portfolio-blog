<div class="col-sm-12">
	<div class="form">
		<h2>お問い合わせ</h2>
		<%= form_with model: @contact, builder: ContactsHelper::ErrorFormBuilder, local: true, url: confirm_contacts_path do |f| %>
			<div class="field">
				<%= f.label :お名前 %><strong>必須</strong><br>
				<%= f.text_field :name %>
				<%= f.hidden_field :name %>
			</div>
			<div class="field">
				<%= f.label :メールアドレス %><strong>必須</strong><br>
				<%= f.text_field :email %>
				<%= f.hidden_field :email %>
			</div>
			<div class="field">
				<%= f.label :題名 %><br>
				<%= f.text_field :title %>
				<%= f.hidden_field :title %>
			</div>
			<div class="field">
				<%= f.label :メッセージ本文 %><br>
				<%= f.text_area :body %>
			</div>
			<div class="actions"><br>
				<%= f.submit "確認画面へ" %>
			</div>
		<% end %>
	</div>
</div>

