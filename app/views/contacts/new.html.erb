<div class="col-xs-12 col-sm-8">
	<h2>お問い合わせ<h2>
	<%= form_with model: @contact, local: true, url: confirm_contact_path do |f| %>
		<div class="form-group">
			<%= f.label :お名前 %><br>
			<%= f.text_field :name %>
		</div>
		<div class="form-group">
			<%= f.label :メールアドレス %><br>
			<%= f.text_field :email %>
		</div>
		<div class="form-group">
			<%= f.label :題名 %><br>
			<%= f.text_field :title %>
		</div>
		<div class="form-group">
			<%= f.label :メッセージ本文 %><br>
			<%= f.text_area :body %>
		</div>
		<div class="form-group"><br>
			<%= f.submit "確認画面へ" %>
		</div>
	<% end %>
</div>
